<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="CommonDateChooser" parent="GtkEntry">
        <property name="secondary-icon-name">pan-down-symbolic</property>
        <property name="placeholder-text">Deadline dd/mm/yyyy</property>
        <property name="input-hints">no-emoji</property>
        <child>
            <object class="GtkPopover" id="date_selector_popover">
                <property name="position">bottom</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <child>
                    <object class="GtkCalendar" id="date_chooser_calendar">
                    </object>
                </child>
            </object>
        </child>

    </template>
</interface>