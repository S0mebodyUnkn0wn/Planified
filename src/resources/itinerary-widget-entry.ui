<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="PlanifiedItineraryWidgetEntry" parent="PlanifiedTaskContainer">
        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
        <child>
            <object class="GtkLabel" id="task_name">
                <property name="valign">GTK_ALIGN_START</property>
                <property name="margin-start"> 5</property>
                <property name="margin-top">   5</property>
                <property name="margin-bottom">5</property>
                <property name="margin-end">   5</property>
                <property name="hexpand">TRUE</property>
<!--                <property name="vexpand">TRUE</property>-->
                <property name="halign">GTK_ALIGN_FILL</property>
                <property name="xalign">0</property>
                <property name="wrap">TRUE</property>
            </object>
        </child>
        <child>
            <object class="GtkLabel" id="task_description">
                <property name="valign">GTK_ALIGN_START</property>
                <property name="margin-start"> 5</property>
                <property name="margin-bottom">5</property>
                <property name="margin-end">   5</property>
                <property name="hexpand">TRUE</property>
<!--                <property name="vexpand">TRUE</property>-->
                <property name="halign">GTK_ALIGN_FILL</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <property name="wrap">TRUE</property>
                <style>
                    <class name="details_text"/>
                    <class name="small_font"/>
                </style>
            </object>
        </child>
        <child>
            <object class="GtkPopoverMenu" id="context_menu">
                <property name="flags">GTK_POPOVER_MENU_SLIDING</property>
                <property name="has-arrow">FALSE</property>
                <property name="halign">GTK_ALIGN_START</property>
                <property name="hexpand">TRUE</property>
            </object>
        </child>
    </template>
</interface>